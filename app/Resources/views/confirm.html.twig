{# app/Resources/views/confirm.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}

    <div id="wrapper">
        <div id="container">
            <div id="welcome">
                <h1>Paiement de votre commande:</h1>
            </div>

            <div>
                {# On affiche tous les messages flash dont le nom est « info » #}
                {% for message in app.session.flashbag.get('success') %}
                    <p>{{ message }}</p>
                {% endfor %}
                <p>
                    Vous avez acheté <strong>{{ command.numberOfTickets }}</strong> billet(s) au prix de <strong>{{ command.totalPrice }}€</strong>.
                    <br/>
                    Votre identifiant de commande est : <strong>{{ command.id }}</strong>
                    <br/>
                    Votre identifiant de transaction bancaire est : <strong>{{ command.chargeId }}</strong>
                    <br/>
                    {{ mailRecap }}
                </p>
            </div>
        </div>
    </div>
    </div>
{% endblock %}
{# app/Resources/views/contact.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}

    <br/>
    <br/>
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <div class="customWell">
                <h1 class="text-center">Contact</h1>
                <h4 class="text-center">Besoin d'informations ? Contactez-nous gr√¢ce au formulaire.</h4>
            </div>
        </div>
    </div>
    <br/>

    <div class="row">
        <div class="col-md-offset-2 col-md-8">
            <div class="well">

                {% for message in app.session.flashbag.get('success') %}
                    {% if message is defined %}
                        <div class="row">
                            <div class="col-md-12">
                                <div class="well">
                                    <p class="text-center">{{ message }}</p>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}

                {{ form_start(contactForm) }}
                <div class="row">
                    <div class="col-md-6">
                        {{  form_row(contactForm.firstName) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(contactForm.lastName) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        {{ form_row(contactForm.visitorEmail) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        {{ form_row(contactForm.subject) }}
                    </div>
                    <div class="col-md-12">
                        {{ form_row(contactForm.message,{'attr':{'rows':'5'}}) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="horizAlignCenter">
                            <input type="submit" value="Valider" class="btn btn-default" />
                        </div>
                    </div>
                </div>
                {{ form_end(contactForm) }}
            </div>
        </div>
    </div>

{% endblock %}